<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Browse Jobs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <header class="d-flex justify-content-center py-3">
      <ul class="nav nav-pills">
        <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
        <li class="nav-item"><a href="/freelancer/dashboard" class="nav-link">Dashboard</a></li>
        <li class="nav-item"><a href="/freelancer/settings" class="nav-link">Settings</a></li>
        <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
      </ul>
    </header>
  </div>

  <div class="container mt-5">
    <h2 class="text-center">Available Jobs</h2>

    <% if (jobs.length === 0) { %>
      <p>No jobs available at the moment.</p>
    <% } else { %>
      <table class="table table-bordered mt-4">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Budget</th>
            <th>Apply</th>
          </tr>
        </thead>
        <tbody>
          <% jobs.forEach(job => { %>
            <tr>
              <td><%= job.title %></td>
              <td><%= job.description %></td>
              <td>$<%= job.budget %></td>
              <td>
                <form action="/freelancer/apply/<%= job.job_id %>" method="GET">
                  <button type="submit" class="btn btn-primary">Apply</button>
                </form>
                <br>
                <form method="GET" action="/freelancer/new-chat/<%= job.employer_id %>">
                  <button type="submit" class="btn btn-primary">Chat</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
